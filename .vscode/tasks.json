{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build with SFML",
      "command": "C:\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "src/main.cpp",
        "src/ProgramManager.cpp",
        "src/PersistentUI.cpp",
        "src/UIPanel.cpp",
        "src/UIButton.cpp",
        "src/UITime.cpp",
        "src/UIConfig.cpp",
        "src/UIState.cpp",
        "src/MyDay.cpp",
        "src/TasksState.cpp",
        "src/TaskList.cpp",
        "src/AddTask.cpp",
        "src/Settings.cpp",
        "src/Calender.cpp",
        "src/TaskItem.cpp",
        "-o",
        "${workspaceFolder}/bin/main.exe",
        "-Iinclude",
        "-IC:/SFML-2.6.2/include",
        "-LC:/SFML-2.6.2-Build/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-lsfml-audio",
        "-lsfml-network"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build task using SFML and MinGW"
    }
  ]
}
